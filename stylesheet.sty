% changing the font for code examples
% showexpl uses the listings package, so changin the font is done using the listing package
\usepackage{fontspec}
\newfontfamily\listingsfont{DejaVu Sans Mono}
\setmonofont[Scale=MatchLowercase]{DejaVu Sans Mono}
% for proper fontsize
\sbox0{\footnotesize\listingsfont A}
\edef\mybasewidth{\the\wd0}
% proper indentation for new paragraphs
\newlength{\parindentsave}
\AtBeginDocument{\setlength{\parindentsave}{\parindent}}
\lstset{%
  numbers           = left,
  xleftmargin       = 1em,
  numbersep         = 2pt,
  numberstyle       = \tiny,
  basicstyle        = \footnotesize\listingsfont,
  columns           = fixed,
  basewidth         = \mybasewidth,
  breaklines        = true,
  breakatwhitespace = true,
  breakindent       = 0pt,
  preset=\setlength{\parindent}{\parindentsave}
}

